<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<%= link_to "edit", edit_article_url(@article) %>
<%= link_to "delete", article_url(@article), method: :delete, data: {confirm: "Really delete the article?"} %>

<h3>Comments (<%= @article.comments.count %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>
<%= link_to "Back to Articles List", articles_url %>
